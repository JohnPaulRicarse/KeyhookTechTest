- property.errors.full_messages.each do |error|
  .flash.-error
    = error

= form_with model: property, class: "form" do |form|
  .form-group
    = form.label :name
    = form.text_field :name, required: true

  .form-group
    = form.label :description
    = form.textarea :description

  .form-group
    = form.label :address
    = form.text_field :address, required: true

  .form-group
    = form.submit "Submit", class: "button"
